generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  userId    Int       @id @default(autoincrement())
  username  String    @unique(map: "User_username_key")
  password  String
  email     String
  firstName String
  lastName  String
  role      user_role

  @@map("user") // Maps to the `user` table in the database
}

enum user_role {
  Manager
  Barista
  Customer
}

model inventory {
  inventoryId       Int        @id @default(autoincrement())
  barcode           Int
  expired           DateTime
  supplierId        Int
}

